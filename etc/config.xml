<?xml version="1.0"?>
<config>
   <modules>
      <Metrof_FBConnect>
         <version>0.2.0</version>
         <depends>
            <Mage_Customer />
         </depends>
      </Metrof_FBConnect>
   </modules>

   <global>
   <blocks>
	<fbconnect><class>Metrof_FBConnect_Block</class></fbconnect>
