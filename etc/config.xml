<?xml version="1.0"?>
<config>
   <modules>
      <Metrof_FBConnect>
         <version>0.3.0</version>
         <depends>
            <Mage_Customer />
         </depends>
      </Metrof_FBConnect>
   </modules>

   <global>
   <blocks>
	<fbconnect><class>Metrof_FBConnect_Block</class></fbconnect>
   </blocks>

	<resources>
		<fbconnect_setup>
			<setup>
				<module>Metrof_FBConnect</module>
			</setup>
			<connection>
				<use>core_setup</use>
			</connection>
		</fbconnect_setup>
	</resources>
    <models>
		<fbconnect>
			<class>Metrof_FBConnect_Model</class>
			<resourceModel>fbconnect_entity</resourceModel>
		</fbconnect>
         <customer>
           <rewrite>
             <customer>Metrof_FBConnect_Model_Customer</customer>
           </rewrite>
         </customer>
		<fbconnect_entity>
			<class>Metrof_FBConnect_Model_Entity</class>
			<entities>
				<entity>
					<table>fb_uid_link</table>
				</entity>
			</entities>
		</fbconnect_entity>
		<core>
			<rewrite>
				<email_template>Metrof_FBConnect_Model_FbEmail</email_template>
			</rewrite>
		</core>
    </models>
    <helpers>
        <fbconnect>
            <class>Metrof_FBConnect_Helper</class>
        </fbconnect>
    </helpers>
    </global>

    <frontend>
     <layout>
          <updates>
              <metrof_fbc>
                  <file>metrof_fbc.xml</file>
              </metrof_fbc>
          </updates>
     </layout>
        <events>
        </events>

        <routers>
            <fbconnect>
                <use>standard</use>
                <args>
					<module>Metrof_FBConnect</module>
                    <frontName>fbc</frontName>
                </args>
            </fbconnect>
        </routers>
    </frontend>

	<default>
		<fbconnect>
			<apikey></apikey>
			<secret></secret>
			<!--
			<apikey></apikey>
			<secret></secret>
			-->
		</fbconnect>

	</default>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <metrof_fbc>
                                            <title>Facebook Connect Section</title>
                                            <sort_order>20</sort_order>
                                        </metrof_fbc>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<fbconnect>
					<file>metrof_fbc.xml</file>
				</fbconnect>
			</updates>
		</layout>
	</adminhtml>
</config>
