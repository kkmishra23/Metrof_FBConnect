	<catalog>
		<rewrite>
			<product_list>Metrof_FBConnect_Block_Product_List</product_list>
			<product_view>Metrof_FBConnect_Block_Product_View</product_view>
		</rewrite> 
	</catalog>
	-->
   </blocks>

	<resources>
		<fbconnect_setup>
			<setup>
				<module>Metrof_FBConnect</module>
			</setup>
			<connection>
				<use>core_setup</use>
			</connection>
		</fbconnect_setup>
	</resources>
	<!--
            <customer>
                <class>Mage_Customer_Model</class>
                <resourceModel>customer_entity</resourceModel>
            </customer>
            <customer_entity>
                <class>Mage_Customer_Model_Entity</class>
                <entities>
                    <entity>
                        <table>customer_entity</table>
                    </entity>
                    <address_entity>
                        <table>customer_address_entity</table>
                    </address_entity>
                    <value_prefix>
                        <table>customer_entity</table>
                    </value_prefix>
                    <customer_group>
                        <table>customer_group</table>
                    </customer_group>
                </entities>
            </customer_entity>
			-->
    <models>
		<fbconnect>
			<class>Metrof_FBConnect_Model</class>
			<resourceModel>fbconnect_entity</resourceModel>
		</fbconnect>
         <customer>
           <rewrite>
             <customer>Metrof_FBConnect_Model_Customer</customer>
           </rewrite>
         </customer>
		<fbconnect_entity>
			<class>Metrof_FBConnect_Model_Entity</class>
			<entities>
				<entity>
					<table>fb_uid_link</table>
				</entity>
			</entities>
		</fbconnect_entity>
    </models>
    <helpers>
        <fbconnect>
            <class>Metrof_FBConnect_Helper</class>
        </fbconnect>
    </helpers>
    </global>

    <frontend>
     <layout>
          <updates>
              <metrof_fbc>
                  <file>metrof_fbc.xml</file>
              </metrof_fbc>
          </updates>
     </layout>
        <events>
			<!--

	  <checkout_cart_before_add>
            <observers>
              <fbconnect>
                <type>object</type>
                <class>Metrof_FBConnect_Helper_Event</class>
                <method>attachSpecialQuoteAttribs</method>
              </fbconnect>
            </observers>
	  </checkout_cart_before_add>
		  -->
        </events>

        <routers>
            <fbconnect>
                <use>standard</use>
                <args>
					<module>Metrof_FBConnect</module>
                    <frontName>fbc</frontName>
                </args>
            </fbconnect>
        </routers>
    </frontend>

	<default>
		<fbconnect>
			<apikey></apikey>
			<secret></secret>
			<!--
			-->
		</fbconnect>

	</default>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <metrof_fbc>
                                            <title>Facebook Connect Section</title>
                                            <sort_order>20</sort_order>
                                        </metrof_fbc>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<fbconnect>
					<file>metrof_fbc.xml</file>
				</fbconnect>
			</updates>
		</layout>
	</adminhtml>
</config>
